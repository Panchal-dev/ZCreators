# Frontend Environment Variables

# API Configuration - Backend URL
VITE_API_URL=http://localhost:5000/api

# Blockchain Configuration
VITE_BLOCKCHAIN_NETWORK=localhost
VITE_BLOCKCHAIN_RPC_URL=http://localhost:8545

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true

# External Services - Replace with your service keys
VITE_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
VITE_SENTRY_DSN=your-sentry-dsn

# App Configuration
VITE_APP_NAME=Green Hydrogen Platform
VITE_APP_VERSION=2.0.0

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHING=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
